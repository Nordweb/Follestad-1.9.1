<?xml version="1.0"?>
<config>
    <tabs>
        <pingbull translate="label" module="cron">
            <label>
                <![CDATA[<span style="background-repeat:no-repeat;line-height: 11px;background-image: url(data:image/png;base64,);">Pingbull</span>]]></label>
            <sort_order>100</sort_order>
        </pingbull>
    </tabs>
    <sections>
        <pingbull translate="label" module="cron">
            <label><![CDATA[Order reminders]]></label>
            <tab>pingbull</tab>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <!-- New groups go here -->
                <notifications translate="label">
                    <label>Delayed orders notification</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>101</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <comment>
                                <![CDATA[Set it to <strong>Yes</strong> to use delayed order notifications]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <delay translate="label comment">
                            <label>Delay period</label>
                            <comment>
                                <![CDATA[Wait X days before sending email notification]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>pingbull_cron/system_config_source_day</source_model>
                            <sort_order>05</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </delay>
                        <subject translate="label comment">
                            <label>Email subject (customer email)</label>
                            <comment>
                                <![CDATA[You can use "{{var order_number}}" to insert order number in email subject]]></comment>
                            <frontend_type>text</frontend_type>

                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </subject>
                        <admin_subject translate="label comment">
                            <label>Email subject (admin email)</label>
                            <comment>
                                <![CDATA[You can also use "{{var order_number}}" to insert order number in email subject]]></comment>
                            <frontend_type>text</frontend_type>

                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </admin_subject>
                        <admin_email translate="label comment">
                            <label>Administrator's Email</label>
                            <comment>
                                <![CDATA[]]></comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-email</validate>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </admin_email>
                    </fields>
                </notifications>
            </groups>
        </pingbull>
    </sections>
</config>